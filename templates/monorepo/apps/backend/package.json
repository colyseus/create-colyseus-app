{
  "private": true,
  "name": "@myapp/backend",
  "version": "1.0.0",
  "description": "Colyseus server",
  "type": "module",
  "main": "build/index.js",
  "exports": {
    "./*": "./src/*.ts"
  },
  "engines": {
    "node": ">= 20.9.0"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "loadtest": "tsx loadtest/example.ts --room my_room --numClients 2",
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "clean": "rimraf build",
    "test": "mocha -r tsx test/**.test.ts --exit --timeout 15000"
  },
  "devDependencies": {
    "@colyseus/loadtest": "^0.17.7",
    "@colyseus/sdk": "^0.17.17",
    "@colyseus/testing": "^0.17.10",
    "@myapp/typescript-config": "workspace:*",
    "@types/express": "^4.17.1",
    "@types/mocha": "^10.0.1",
    "mocha": "^11.7.5",
    "rimraf": "^5.0.0"
  },
  "dependencies": {
    "colyseus": "^0.17.6",
    "@colyseus/schema": "^4.0.0",
    "@colyseus/tools": "^0.17.0",
    "@myapp/shared": "workspace:*",
    "express": "^4.18.2"
  }
}
